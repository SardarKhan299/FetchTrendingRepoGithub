<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GuideLineSize">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:contentDescription">@null</item>
    </style>

    <style name="roundedCornersImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_20sdp</item>
    </style>


    <style name="NameStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="RepoStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ErrorStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">22sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ErrorStyleDesc" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="DescStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">10sp</item>
        <item name="android:maxLines">2</item>
    </style>

</resources>